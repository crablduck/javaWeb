        <action name="findUserList" class="com.xjw.action.UserAction" method="findUserList">
            <result name="success">userList.jsp</result>
        </action>
        
        <action name="addUser" class="com.xjw.action.UserAction" method="addUser">
            <result name="success" type="redirect">findUserList</result>
        </action>
        
        <action name="findUserById" class="com.xjw.action.UserAction" method="findUserById">
            <result name="success">updateuser.jsp</result>
        </action>
        
        <action name="deleteUser" class="com.xjw.action.UserAction" method="deleteUser">
            <result name="success" type="redirect">findUserList</result>
        </action>
        
        <action name="updateUser" class="com.xjw.action.UserAction" method="updateUser">
            <result name="success" type="redirect">findUserList</result>
        </action>
        
        
    </package>

</struts>
