	<package name="hello" namespace="/" extends="struts-default">
		
		<!-- 
			action
				name：action的访问路径
				class:action的全类名
				method:类中的方法名称	
		 -->
		<action name="helloAction" class="com.xjw.action.HelloAction" method="hello">
			<!-- 
				name:方法的返回值 
				节点中间的内容：跳转的指定页面
			-->
			<result name="success">ok.jsp</result>
		</action>
		
	</package>
	
